@if (isLoaded)
{
    @ChildContent
}
else
{
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30">
                <img src="assets/images/logo.svg" width="48" height="48" alt="Alpino">
            </div>
            <p>Please wait...</p>
        </div>
    </div>
}

@code {
    bool isLoaded;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(4000); // TODO actual initialization job
        isLoaded = true;
    }

}