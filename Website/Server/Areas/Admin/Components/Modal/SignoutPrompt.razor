@inject IModalService ModalService

<div>
    <p>Are you sure you want to signout the system?</p>

    <button @onclick="Yes" class="btn btn-outline-danger">Yes</button>
    <button @onclick="No" class="btn btn-primary">No</button>
</div>

@code {

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; }

    [Inject]
    public NavigationManager NavigationManager { get; set; }

    async Task Yes()
    {
        NavigationManager.NavigateTo("admin/auth/signin");

        await BlazoredModal.CloseAsync();
    }

    async Task No()
    {
        await BlazoredModal.CancelAsync();
    }

}