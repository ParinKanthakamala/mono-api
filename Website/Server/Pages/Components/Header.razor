@inherits WebsiteHeader

<header>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div id="logo">
                    @if (!string.IsNullOrEmpty(logo))
                    {
                        <a href="/">
                            <img src="@logo" title="@name" alt="@name" class="img-responsive"/>
                        </a>
                    }
                    else
                    {
                        <h1>
                            <a href="/">@name</a>
                        </h1>
                    }
                </div>
            </div>
            <div class="col-sm-5">@search</div>
            <div class="col-sm-3">@cart</div>
        </div>
    </div>
</header>
<Menu></Menu>